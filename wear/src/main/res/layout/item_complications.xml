<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_config_padding"
            android:layout_marginTop="@dimen/activity_config_padding_small"
            android:layout_marginLeft="@dimen/activity_config_padding_small"
            android:layout_marginRight="@dimen/activity_config_padding_small"
            android:background="@drawable/background"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_config_padding"
            android:layout_marginTop="@dimen/activity_config_padding_small"
            android:layout_marginLeft="@dimen/activity_config_padding_small"
            android:layout_marginRight="@dimen/activity_config_padding_small"
            android:background="@drawable/preview_clock"/>

    <ImageView
            android:id="@+id/left_complication"
            android:layout_width="@dimen/complication_preview_size"
            android:layout_height="@dimen/complication_preview_size"
            android:layout_marginLeft="@dimen/complication_preview_margin_horizontal"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerInside"
            android:src="@drawable/add_complication"
            android:background="@android:color/transparent"/>

    <ImageView
            android:id="@+id/right_complication"
            android:layout_width="@dimen/complication_preview_size"
            android:layout_height="@dimen/complication_preview_size"
            android:layout_marginRight="@dimen/complication_preview_margin_horizontal"
            android:layout_gravity="center_vertical|end"
            android:scaleType="centerInside"
            android:src="@drawable/add_complication"
            android:background="@android:color/transparent"/>

    <ImageView
            android:id="@+id/top_complication"
            android:layout_width="@dimen/complication_big_preview_width"
            android:layout_height="@dimen/complication_big_preview_height"
            android:layout_marginTop="@dimen/complication_preview_margin_vertical"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerInside"
            android:src="@drawable/add_big_complication"
            android:background="@android:color/transparent"/>

    <ImageView
            android:id="@+id/bottom_complication"
            android:layout_width="@dimen/complication_big_preview_width"
            android:layout_height="@dimen/complication_big_preview_height"
            android:layout_marginBottom="@dimen/complication_preview_margin_vertical"
            android:layout_gravity="center_horizontal|bottom"
            android:scaleType="centerInside"
            android:src="@drawable/add_big_complication"
            android:background="@android:color/transparent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>