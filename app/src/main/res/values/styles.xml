<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>

        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>

        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Button.Circle</item>
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="MessageSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/padding_32</item>
        <item name="android:gravity">center</item>
    </style>

</resources>